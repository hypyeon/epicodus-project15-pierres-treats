@{
  Layout = "_Layout";
}

@model PierresTreats.Models.Flavor

<h2>Add Treat to @Html.DisplayFor(model => model.Name)</h2>

@using (Html.BeginForm())
{
    @Html.HiddenFor(model => model.FlavorId)

    @Html.Label("Select a treat: ")
    @Html.DropDownList("TreatId")

    <input type="submit" value="Add" />
}

<div class="buttons">
  <p>@Html.ActionLink("Flavor List", "Index")</p>
  <p>@Html.ActionLink("Home", "Index", "Home")</p>
</div>