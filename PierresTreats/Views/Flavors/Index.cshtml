@{
  Layout = "_Layout";
}

@using PierresTreats.Models

<div class="lists">
  <div class="list">
    <h2>Flavor List for @User.Identity.Name</h2>
    <hr />
    @if (Model.Count == 0)
    {
      <p>No flavors have been added yet!</p>
    }
    else 
    {
      <ul>
        @foreach (Flavor flavor in Model)
        {
          <li>@Html.ActionLink($"{flavor.Name}", "Details", new { id = flavor.FlavorId })</li>
        }
      </ul>
    }
  </div>
</div>
<div class="buttons">
  <p>@Html.ActionLink("Add new Flavor", "Create")</p>
  <p>@Html.ActionLink("Homepage", "Index", "Home")</p>
</div>