@{
  Layout = "_Layout";
}

@using PierresTreats.Models

<div class="lists">
  <div class="list">
    <h2>Treat List</h2>
    <hr />
    @if (Model.Count == 0)
    {
      <p>No treats have been added yet!</p>
    }
    else
    {
      <ul>
        @foreach (Treat treat in Model)
        {
          <li>@Html.ActionLink($"{treat.Name}", "Details", new { id = treat.TreatId })</li>
        }
      </ul>
    }
  </div>
</div>

<div class="buttons">
  <p>@Html.ActionLink("Add New Treat", "Create")</p>
  <p>@Html.ActionLink("Homepage", "Index", "Home")</p>
</div>